{
  "name": "backend-coding-test",
  "version": "1.0.0",
  "description": "A coding assessment for Xendit backend interviews",
  "main": "index.ts",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "nyc --reporter=html --reporter=text ts-mocha -p tsconfig.json tests/**.ts",
    "forever": "forever start -v -c ts-node index.ts",
    "test:load": "npm run forever & sleep 10 && artillery run artillery/scenario.yaml && forever stopall",
    "start": "ts-node index.ts"
  },
  "pre-push": [
    "test"
  ],
  "keywords": [
    "Xendit"
  ],
  "author": "Bo",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.17.13",
    "@types/sqlite3": "^3.1.8",
    "body-parser": "^1.19.0",
    "express": "^4.16.4",
    "sqlite3": "^4.0.6",
    "typescript": "^4.5.5",
    "winston": "^3.5.1"
  },
  "devDependencies": {
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.17",
    "@types/supertest": "^2.0.11",
    "eslint": "^6.8.0",
    "esm": "^3.2.25",
    "mocha": "^6.1.4",
    "nyc": "^15.1.0",
    "pre-push": "^0.1.1",
    "supertest": "^4.0.2",
    "ts-mocha": "^9.0.2"
  }
}
